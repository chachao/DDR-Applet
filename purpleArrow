//import
import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * The PurpleArrow class is for the arrows 
 * that move up the screen on the furthest path to the left
 * Division of work same as BlueArrow
 */
public class PurpleArrow extends Arrow
{
    private GreenfootImage image1;
    
    //constructor
    public PurpleArrow(){
        image1 = new GreenfootImage("purplearrow.png");
        image1.scale(85,85);
        setImage(image1);
        setRotation(-90);
    }
    
    //disappear method
    public void disappear()
    {
        super.disappear();
        this.setLocation(430, 600); //send back to bottom of lane
    }
}
